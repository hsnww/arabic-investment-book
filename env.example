# Environment Configuration for Investment Book
# إعدادات البيئة لكتاب الاستثمار

# Application
APP_NAME="المال والاستثمار في الأسواق المالية"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://zajwal.com

# Database (for future features)
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=investment_book
DB_USERNAME=bookuser
DB_PASSWORD=bookpass

# Cache
CACHE_DRIVER=file
CACHE_PREFIX=book_

# Session
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Mail (for future features)
MAIL_DRIVER=smtp
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=noreply@zajwal.com
MAIL_FROM_NAME="كتاب الاستثمار"

# Google Analytics
GA_TRACKING_ID=G-XXXXXXXXXX

# Social Media
TWITTER_URL=https://twitter.com/zajwal
FACEBOOK_URL=https://facebook.com/zajwal
LINKEDIN_URL=https://linkedin.com/company/zajwal
YOUTUBE_URL=https://youtube.com/zajwal

# Security
CSRF_TOKEN_LIFETIME=3600
SESSION_SECURE_COOKIE=false

# Performance
OPCACHE_ENABLE=true
OPCACHE_MEMORY_CONSUMPTION=128
OPCACHE_MAX_ACCELERATED_FILES=4000

# Logging
LOG_LEVEL=error
LOG_CHANNEL=file

# Backup
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30

# Development
DEV_MODE=false
DEBUG_BAR=false 