    "devDependencies": {
        "@babel/core": "^7.22.0",
        "@babel/preset-env": "^7.22.0",
        "babel-loader": "^9.1.0",
        "css-loader": "^6.8.0",
        "eslint": "^8.42.0",
        "imagemin-cli": "^7.0.0",
        "imagemin-mozjpeg": "^10.0.0",
        "imagemin-pngquant": "^9.0.0",
        "mini-css-extract-plugin": "^2.7.0",
        "sass": "^1.62.0",
        "sass-loader": "^13.3.0",
        "style-loader": "^3.3.0",
        "webpack": "^5.88.0",
        "webpack-cli": "^5.1.0"
    },
    "dependencies": {
        "bootstrap": "^5.3.0",
        "font-awesome": "^4.7.0",
