{
    "name": "investment-book-frontend",
    "version": "2.0.0",
    "description": "Frontend assets for the Investment Book website",
    "main": "index.js",
    "scripts": {
        "build": "webpack --mode production",
        "dev": "webpack --mode development --watch",
        "lint": "eslint assets/js/**/*.js",
